<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">
    <Text
        ohos:id="$+id:back"
        ohos:height="match_parent"
        ohos:width="match_parent"/>
    <Button
        ohos:id="$+id:outline"
        ohos:height="45vp"
        ohos:width="match_parent"
        ohos:text="服务资源管理"
        ohos:text_size="20vp"
        ohos:top_margin="20vp"
        ohos:layout_alignment="horizontal_center"
        ohos:background_element="$graphic:background_ability_button"/>
    <Button
        ohos:id="$+id:server"
        ohos:height="45vp"
        ohos:width="90vp"
        ohos:text="监控列表"
        ohos:background_element="$graphic:background_ability_button"
        ohos:below="$+id:outline"
        ohos:top_margin="10vp"
        ohos:text_size="20vp"/>
    <Button
        ohos:id="$+id:shape"
        ohos:height="45vp"
        ohos:width="90vp"
        ohos:text="图形界面"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:end_of="$id:server"
        ohos:below="$id:outline"
        ohos:top_margin="10vp"
        ohos:left_margin="20vp"
        />
    <Button
        ohos:id="$+id:process"
        ohos:height="45vp"
        ohos:width="90vp"
        ohos:text="进程管理"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:end_of="$id:shape"
        ohos:below="$id:outline"
        ohos:top_margin="10vp"
        ohos:left_margin="20vp"
        />
    <Button
        ohos:id="$+id:setting"
        ohos:height="45vp"
        ohos:width="90vp"
        ohos:text="设置主题"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:end_of="$id:process"
        ohos:below="$id:outline"
        ohos:top_margin="10vp"
        ohos:left_margin="20vp"
        />
    <Button
        ohos:id="$+id:set"
        ohos:height="45vp"
        ohos:width="300vp"
        ohos:text="设置主题"
        ohos:text_size="30vp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:center_in_parent="true"/>
</DependentLayout>