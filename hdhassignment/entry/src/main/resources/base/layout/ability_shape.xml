<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <Button
        ohos:id="$+id:outline"
        ohos:height="45vp"
        ohos:width="match_parent"
        ohos:text="服务资源管理"
        ohos:text_size="20vp"
        ohos:top_margin="20vp"
        ohos:layout_alignment="horizontal_center"
        ohos:background_element="$graphic:background_ability_button"/>
    <Button
        ohos:id="$+id:server"
        ohos:height="45vp"
        ohos:width="90vp"
        ohos:text="监控列表"
        ohos:background_element="$graphic:background_ability_button"
        ohos:below="$+id:outline"
        ohos:top_margin="10vp"
        ohos:text_size="20vp"/>
    <Button
        ohos:id="$+id:shape"
        ohos:height="45vp"
        ohos:width="90vp"
        ohos:text="图形界面"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:end_of="$id:server"
        ohos:left_margin="20vp"
        ohos:below="$id:outline"
        ohos:top_margin="10vp"
        />
    <Button
        ohos:id="$+id:process"
        ohos:height="45vp"
        ohos:width="90vp"
        ohos:text="进程管理"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:end_of="$id:shape"
        ohos:below="$id:outline"
        ohos:top_margin="10vp"
        ohos:left_margin="20vp"
        />
    <Button
        ohos:id="$+id:setting"
        ohos:height="45vp"
        ohos:width="90vp"
        ohos:text="设置主题"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:end_of="$id:process"
        ohos:below="$id:outline"
        ohos:top_margin="10vp"
        ohos:left_margin="20vp"
        />
    <DependentLayout
        ohos:id="$+id:d1"
        ohos:top_margin="10vp"
        ohos:height="250vp"
        ohos:width="match_parent"
        ohos:below="$id:shape"
        ohos:orientation="horizontal"
        ohos:alignment="bottom"
        ohos:background_element="$graphic:background_back">
        <Text
            ohos:height="20vp"
            ohos:left_margin="2vp"
            ohos:width="30vp"
            ohos:text="%"
            ohos:text_size="20vp"
            ohos:right_of="$id:y"/>
        <Text
            ohos:id="$+id:y"
            ohos:height="250vp"
            ohos:width="3vp"
            ohos:left_margin="45vp"
            ohos:background_element="$graphic:background_line"/>
        <Text
            ohos:id="$+id:x"
            ohos:height="3vp"
            ohos:width="match_parent"
            ohos:left_margin="45vp"
            ohos:background_element="$graphic:background_line"
            ohos:align_parent_bottom="true"/>
        <Text
            ohos:left_margin="90vp"
            ohos:id="$+id:c1"
            ohos:height="0vp"
            ohos:text="0"
            ohos:text_size="10vp"
            ohos:text_color="#FFFFFFFF"
            ohos:width="40vp"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:backgrond_chart"
            ohos:above="$id:x"/>
        <Text
            ohos:height="20vp"
            ohos:width="30vp"
            ohos:text="CPU"
            ohos:text_size="10vp"
            ohos:right_of="$id:c1"
            ohos:above="$id:x"/>
        <Text
            ohos:id="$+id:c2"
            ohos:height="0vp"
            ohos:width="40vp"
            ohos:right_of="$id:c1"
            ohos:text="0"
            ohos:text_size="10vp"
            ohos:text_color="#FFFFFFFF"
            ohos:left_margin="50vp"
            ohos:above="$id:x"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:backgrond_chart"/>
        <Text
            ohos:height="20vp"
            ohos:width="35vp"
            ohos:text="System"
            ohos:text_size="10vp"
            ohos:right_of="$id:c2"
            ohos:above="$id:x"/>
        <Text
            ohos:id="$+id:c3"
            ohos:height="0vp"
            ohos:width="40vp"
            ohos:right_of="$id:c2"
            ohos:text="0"
            ohos:text_size="10vp"
            ohos:text_color="#FFFFFFFF"
            ohos:left_margin="50vp"
            ohos:above="$id:x"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:backgrond_chart"/>
        <Text
            ohos:height="20vp"
            ohos:width="35vp"
            ohos:text="User"
            ohos:text_size="10vp"
            ohos:right_of="$id:c3"
            ohos:above="$id:x"/>
    </DependentLayout>
    <DependentLayout
        ohos:top_margin="10vp"
        ohos:height="250vp"
        ohos:width="match_parent"
        ohos:below="$id:d1"
        ohos:orientation="horizontal"
        ohos:alignment="bottom"
        ohos:background_element="$graphic:background_back">
        <Text
            ohos:height="20vp"
            ohos:left_margin="2vp"
            ohos:width="30vp"
            ohos:text="%"
            ohos:text_size="20vp"
            ohos:above="$id:x2"
            ohos:align_parent_right="true"/>
        <Text
            ohos:id="$+id:y2"
            ohos:height="250vp"
            ohos:width="3vp"
            ohos:left_margin="45vp"
            ohos:background_element="$graphic:background_line"/>
        <Text
            ohos:id="$+id:x2"
            ohos:height="3vp"
            ohos:width="match_parent"
            ohos:left_margin="45vp"
            ohos:background_element="$graphic:background_line"
            ohos:align_parent_bottom="true"/>
        <Text
            ohos:top_margin="25vp"
            ohos:id="$+id:c12"
            ohos:height="40vp"
            ohos:text="0"
            ohos:text_size="10vp"
            ohos:text_color="#FFFFFFFF"
            ohos:width="0vp"
            ohos:right_of="$id:y2"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:background_chartb"/>
        <Text
            ohos:height="20vp"
            ohos:width="35vp"
            ohos:text="内存"
            ohos:text_size="10vp"
            ohos:right_of="$id:y2"
            ohos:below="$id:c12"/>
        <Text
            ohos:id="$+id:c22"
            ohos:height="40vp"
            ohos:width="0vp"
            ohos:below="$id:c12"
            ohos:text="0"
            ohos:text_size="10vp"
            ohos:text_color="#FFFFFFFF"
            ohos:top_margin="25vp"
            ohos:right_of="$id:y2"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:background_chartb"/>
        <Text
            ohos:height="20vp"
            ohos:width="40vp"
            ohos:text="已用内存"
            ohos:text_size="10vp"
            ohos:below="$id:c22"
            ohos:right_of="$id:y2"/>
        <Text
            ohos:id="$+id:c32"
            ohos:height="40vp"
            ohos:width="0vp"
            ohos:below="$id:c22"
            ohos:right_of="$id:y2"
            ohos:text="0"
            ohos:text_size="10vp"
            ohos:top_margin="25vp"
            ohos:text_color="#FFFFFFFF"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:background_chartb"/>
        <Text
            ohos:height="20vp"
            ohos:width="40vp"
            ohos:text="剩余内存"
            ohos:text_size="10vp"
            ohos:right_of="$id:y2"
            ohos:below="$id:c32"/>
    </DependentLayout>
    <Button
        ohos:id="$+id:flush"
        ohos:text="刷新"
        ohos:bottom_margin="20vp"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:horizontal_center="true"
        ohos:align_parent_bottom="true"
        ohos:height="45vp"
        ohos:width="120vp"
        />
</DependentLayout>