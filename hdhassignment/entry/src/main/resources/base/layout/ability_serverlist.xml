<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <Button
        ohos:id="$+id:outline"
        ohos:height="45vp"
        ohos:width="match_parent"
        ohos:text="服务资源管理"
        ohos:text_size="20vp"
        ohos:top_margin="20vp"
        ohos:layout_alignment="horizontal_center"
        ohos:background_element="$graphic:background_ability_button"/>
    <Button
        ohos:id="$+id:server"
        ohos:height="45vp"
        ohos:width="90vp"
        ohos:text="监控列表"
        ohos:background_element="$graphic:background_ability_button"
        ohos:below="$+id:outline"
        ohos:top_margin="10vp"
        ohos:text_size="20vp"/>
    <Button
        ohos:id="$+id:shape"
        ohos:height="45vp"
        ohos:width="90vp"
        ohos:text="图形界面"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:end_of="$id:server"
        ohos:below="$id:outline"
        ohos:top_margin="10vp"
        ohos:left_margin="20vp"
        />
    <Button
        ohos:id="$+id:process"
        ohos:height="45vp"
        ohos:width="90vp"
        ohos:text="进程管理"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:end_of="$id:shape"
        ohos:below="$id:outline"
        ohos:top_margin="10vp"
        ohos:left_margin="20vp"
        />
    <Button
        ohos:id="$+id:setting"
        ohos:height="45vp"
        ohos:width="90vp"
        ohos:text="设置主题"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:end_of="$id:process"
        ohos:below="$id:outline"
        ohos:top_margin="10vp"
        ohos:left_margin="20vp"
        />
    <DirectionalLayout
        ohos:id="$+id:dir"
        ohos:width="match_parent"
        ohos:height="40vp"
        ohos:below="$id:shape"
        ohos:orientation="horizontal"
        >
        <Text
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:id="$+id:name"
            ohos:text="服务器"
            ohos:text_size="20vp"
            ohos:weight="10"
            ohos:text_alignment="center"
            ohos:layout_alignment="center"
            />

        <Text
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:id="$+id:phone"
            ohos:text="IP"
            ohos:text_size="20vp"
            ohos:weight="10"
            ohos:text_alignment="center"
            ohos:layout_alignment="center"
            />
        <Text
            ohos:width="match_parent"
            ohos:text="长按删除"
            ohos:text_size="20vp"
            ohos:height="40vp"
            ohos:weight="7"
            ohos:left_margin="20vp"
            >
        </Text>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:below="$id:dir"
        ohos:top_margin="20vp"
        ohos:above="$id:add"
        ohos:bottom_margin="20vp"
        ohos:orientation="vertical"
        >
        <ListContainer
            ohos:id="$+id:listContainer"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="vertical"/>
    </DirectionalLayout>
    <Button
        ohos:id="$+id:add"
        ohos:text="添加服务器"
        ohos:bottom_margin="20vp"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:horizontal_center="true"
        ohos:align_parent_bottom="true"
        ohos:height="45vp"
        ohos:width="120vp"
        />
</DependentLayout>